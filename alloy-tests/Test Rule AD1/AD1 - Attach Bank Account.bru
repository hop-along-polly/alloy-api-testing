meta {
  name: AD1 - Attach Bank Account
  type: http
  seq: 3
}

post {
  url: {{protocol}}://{{host}}/v1/events
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token}}
}

body:json {
  {
    "event_type": "bank_account_created",
    "data": {
      "external_account_id": "{{ad1_acct_id}}",
      "account_name": "Test Checking",
      "account_number": "123456",
      "routing_number": "012345678",
      "opening_date": "2023-01-05T00:00:00.000Z",
      "cif_number": "01234567890",
      "country_code": "US",
      "currency": "USD",
      "account_balance": 13.37,
      "entities": [{
        "account_holder_type": "primary",
        "external_entity_id": "{{ad1_person_entity_id}}"
      }],
      "timestamp": "{{ts}}"
    }
  }
  
}

script:pre-request {
  const moment = require('moment');
  const uuid = require('uuid');
  
  // Set the current timestamp for the request
  bru.setEnvVar('ts', moment().toISOString());
  
  bru.setEnvVar('ad1_acct_id', uuid.v4());
  
}

script:post-response {
  const { account_token } = res.body.event.data;
  
  bru.setEnvVar('ad1_acct_token', account_token);
  
}

tests {
  test('Should return an account_token', () => {
    const { event } = res.body;
    expect(event.event_status).to.equal('PROCESSED');
    
    const { account_token } = event.data;
    expect(account_token).match(/A-.*/);
  });
  
}
