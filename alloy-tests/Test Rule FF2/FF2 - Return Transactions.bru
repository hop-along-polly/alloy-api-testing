meta {
  name: FF2 - Return Transactions
  type: http
  seq: 4
}

post {
  url: {{protocol}}://{{host}}/v1/events
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token}}
}

body:json {
  {
    "event_type": "transaction",
    "data": {
      "external_entity_id": "{{ff2_person_entity_id}}",
      "external_transaction_id": "{{ff2_tx_id}}",
      "external_account_id": "{{ff2_acct_id}}",
      "category": "Return",
      "amount": 1000000,
      "status": "Completed",    
      "process_method": "ACH",
      "return_code": "R01",
      "currency": "USD",
      "supplemental_data": {
        "birth_date": "1991-02-10T00:00:00.000Z"
      },
      "counterparty": {
        "external_counter_party_id": "{{ff2_person_entity_id}}",
        "account_number": "012345"
      },
      "timestamp": "{{ts}}"
    }
  }
}

script:pre-request {
  const moment = require('moment');
  
  // Counter to track how many transactions are
  // created w/ this request.
  let iters = parseInt(bru.getEnvVar('ff2_iter')) || 0;
  if (!iters || iters >= 4) {
   iters = 0
  }
  bru.setEnvVar('ff2_iter', ++iters);
  
  bru.setEnvVar(
    'ff2_tx_id',
    require('uuid').v4() + `+tx-${iters}`
  );
  
  bru.setEnvVar(
    'ts',
    moment().subtract(30, 'minutes').toISOString()
  );
}

script:post-response {
  let iters = parseInt(bru.getEnvVar('ff2_iter'));
  if (iters < 4) {
    bru.setNextRequest(
      'FF2 - Return Transactions'
    );
  } else {
    bru.setNextRequest(null);
  }
  
}

tests {
  test('Should Approve the transaction', () => {
    const { event } = res.body;
    
    expect(event.event_status).to.equal('PROCESSED')
    
    const { evaluations } = event;
    expect(evaluations[0].summary.outcome).to.equal(
      'Approved'
    );
  });
  
}
