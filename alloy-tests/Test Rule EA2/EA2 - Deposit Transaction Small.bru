meta {
  name: EA2 - Deposit Transaction Small
  type: http
  seq: 4
}

post {
  url: {{protocol}}://{{host}}/v1/events
  body: json
  auth: bearer
}

auth:bearer {
  token: {{access_token}}
}

body:json {
  {
    "event_type": "transaction",
    "data": {
      "external_entity_id": "{{ea2_person_entity_id}}",
      "external_transaction_id": "{{ea2_tx_id}}",
      "external_account_id": "{{ea2_acct_id}}",
      "category": "Deposit",
      "amount": 500000,
      "status": "Completed",
      "process_method": "ACH",
      "currency": "USD",
      "supplemental_data": {
        "birth_date": "1991-02-10T00:00:00.000Z"
      },
      "counterparty": {
        "external_counter_party_id": "{{ea2_person_entity_id}}",
        "account_number": "012345"
      },
      "timestamp": "{{yesterday}}"
    }
  }
}

script:pre-request {
  const moment = require('moment');
  
  bru.setEnvVar('ea2_tx_id', require('uuid').v4());
  
  bru.setEnvVar(
    'yesterday',
    moment().subtract(1, 'day').toISOString()
  );
  
}

tests {
  test('Should Approve the transaction', () => {
    const { event } = res.body;
    
    expect(event.event_status).to.equal('PROCESSED')
    
    const { evaluations } = event;
    expect(evaluations[0].summary.outcome).to.equal(
      'Approved'
    );
  });
  
}
